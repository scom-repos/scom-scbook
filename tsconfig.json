{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "composite": true, 
    "experimentalDecorators": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@ijstech/components": ["node_modules/@ijstech/components"],
      "@ijstech/compiler": ["src/lib/compiler/index"],
      "@scbook/*": ["src/*"]
    }
  },
  "include": ["src/**/*.tsx", "src/**/*.ts"]
}
